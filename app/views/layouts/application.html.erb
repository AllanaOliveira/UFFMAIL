<!DOCTYPE html>
<html>
<title>UFF</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<%= stylesheet_link_tag    'application' %>
<%= stylesheet_link_tag    'welcome' %>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <%= link_to welcome_index_path, class:"navbar-brand" do%>
    <span>UFF</span>
  <%end %>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item active">

        <%= link_to welcome_index_path, class:"nav-link" do%>
         <span><%= t('home') %></span>
          <% end %>
      </li>
      <li class="nav-item">
        <%= link_to student_index_path, class:"nav-link" do%>
          <span><%= t('uffmail') %></span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to about_index_path, class:"nav-link" do%>
          <span><%= t('about') %></span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to 'PortuguÃªs',root_path(locale: 'pt-BR'), class:"nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'English',root_path(locale: 'en'), class:"nav-link" %>
      </li>
    </ul>
  </div>
</nav>

<!-- Add a background color and large text to the whole page -->
<div class="w3-sand w3-grayscale w3-large">

  <!-- Contact/Area Container -->
  <div class="w3-container" id="where" style="padding-bottom:32px;">
    <div class="w3-content" style="max-width:700px">
      <%= yield %>
    </div>
  </div>

  <!-- End page content -->
</div>

<!-- Footer -->
<footer class="w3-center w3-light-grey w3-padding-48 w3-large">
  <a href="http://www.uff.br/" title="STI-UFF" target="_blank" class="w3-hover-text-green">STI-UFF</a>
</footer>

<%= javascript_include_tag 'application' %>

<% if notice %>
  <%= javascript_include_tag do %>
    $.bootstrapGrowl('<%= notice %>', {
    type: 'success', // (null, 'info', 'danger', 'success')
    align: 'right', // ('left', 'right', or 'center')
    allow_dismiss: true, // If true then will display a cross to close the popup.
    stackup_spacing: 10 // spacing between consecutively stacked growls.
    });
  <% end %>
<% end %>


</body>

</html>