<div class= "row">
  <div class="col-lg-12">
    <h1 class="page-header">

      <%= t('messages.listing') %>
    </h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th><%= translate_attribute(@students,:matricula) %></th>
      <th>
        <%= link_to new_student_path, class:"btn btn-success btn-circle btn-sm" do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.matricula %></td>
        <td style="width: 50px">
          <%= link_to edit_student_path(student), class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fa fa-edit"></i>
          <% end %>

        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= paginate @students %>
  </div>
</div>