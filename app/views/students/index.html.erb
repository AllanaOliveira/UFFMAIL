<p id="notice"><%= notice %></p>

<h1>Students</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Matricula</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th><%= link_to new_student_path, class:"btn btn-link btn-lg"  do %>
          <i class="material-icons md-dark">fiber_new</i>

        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.matricula %></td>
        <td><%= student.email %></td>
        <td><%= link_to student_path(student), class:"btn btn-link btn-sm" do %>
          <i class="material-icons md-dark">remove_red_eye</i>
          <% end %>
        </td>
        <td><%= link_to edit_student_path(student), class:"btn btn-link btn-sm" do %>
            <i class="material-icons md-dark">edit</i>

        <% end %>
        </td>
        <td><%= link_to edit_student_path(student) ,  class:"btn btn-link btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } do%>
            <i class="material-icons md-dark">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

